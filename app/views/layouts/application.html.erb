<!DOCTYPE html>
<html>
  <head>
    <title>BookList</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheets" href="home.scss">
    <link rel="stylesheets" href="responsive.scss">
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= favicon_link_tag('/assets/favicon-booklist.ico') %>
  </head>

  <body>
    <header>
      <div class="header-logo">
        <% if @current_user %>
          <%= link_to(image_tag('/assets/BookList-title.png', alt: 'BookList', size: '250x60'), "/lists/index") %>
        <% else %>
          <%= link_to(image_tag('/assets/BookList-title.png', alt: 'BookList', size: '250x60'), "/") %>
        <% end %>
      </div>
      <ul class="header-menus">
        <li>
          <%= link_to("リスト一覧", "/lists/index") %>
        </li>
        <% if @current_user %>
          <li>
            <%= link_to("マイページ", "/users/#{@current_user.id}") %>
          </li>
          <li>
            <%= link_to("リスト作成", "/lists/new") %>
          </li>
          <li>
            <%= link_to("ログアウト", "/logout", {method: :post}) %>
          </li>
        <% else %>
          <li>
            <%= link_to("新規登録", "/signup") %>
          </li>
          <li>
            <%= link_to("ログイン", "/login") %>
          </li>
        <% end %>
      </ul>
    </header>
    
    <% if flash[:notice] %>
      <div class="flash">
        <%= flash[:notice] %>
      </div>
    <% end %>

    
    <%= yield %>
  </body>
  
  <footer>
  </footer>
</html>